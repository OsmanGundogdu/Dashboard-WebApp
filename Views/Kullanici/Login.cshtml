<div class="container mt-5">
    <h1>Giriş Yap</h1>
    <form asp-action="Login" method="post">
        <div class="form-group">
            <label for="email">E-posta Adresi</label>
            <input type="email" id="email" name="email" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="password">Şifre</label>
            <input type="password" id="password" name="password" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary mt-3">Giriş Yap</button>
    </form>

    <div class="mt-3">
        <!-- Şifremi Unuttum Linki -->
        <a href="@Url.Action("ForgotPassword", "Kullanici")" class="text-secondary">Şifremi Unuttum</a>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger mt-3">@ViewBag.ErrorMessage</div>
    }
</div>
