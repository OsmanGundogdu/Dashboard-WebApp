@{
    var message = TempData["Message"];
    var messageClass = TempData["MessageClass"] ?? "alert-info"; // Varsayılan sınıf: alert-info
}

@if (message != null)
{
    <div class="alert @messageClass mt-3">
        @message
    </div>
}

<!-- Etkinlikler Tablosu -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Tarih</th>
            <th>Saat</th>
            <th>Konum</th>
            <th>Kategori</th>
            <th>Onay Durumu</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var etkinlik in Model)
        {
            <tr>
                <td>@etkinlik.EventName</td>
                <td>@etkinlik.Date.ToString("yyyy-MM-dd")</td>
                <td>@etkinlik.Time.ToString(@"hh\:mm")</td>
                <td>@etkinlik.Location</td>
                <td>@etkinlik.Category</td>
                <td>
                    @if (etkinlik.IsApproved)
                    {
                        <span class="badge bg-success">Onaylı</span>
                    }
                    else
                    {
                        <span class="badge bg-warning">Onay Bekliyor</span>
                    }
                </td>
                <td>
                    <a href="@Url.Action("EditEvent", "Event", new { id = etkinlik.ID })" class="btn btn-sm btn-warning">Düzenle</a>
                    <a href="@Url.Action("DeleteEvent", "Event", new { id = etkinlik.ID })" class="btn btn-sm btn-danger" onclick="return confirm('Etkinliği silmek istediğinizden emin misiniz?')">Sil</a>
                    @if (!etkinlik.IsApproved)
                    {
                        <a href="@Url.Action("ApproveEvent", "Event", new { id = etkinlik.ID })" class="btn btn-sm btn-success">Onayla</a>
                    }
                </td>
                <td>
                    <a href="@Url.Action("ShowChat", "Message", new { eventId = etkinlik.ID })" class="btn btn-sm btn-info">Mesajlaş</a>
                </td>
                <td>
                    <!-- Detaylar butonu -->
                    <a href="@Url.Action("ShowEventDetails", "Event", new { id = etkinlik.ID })" class="btn btn-sm btn-info">Detaylar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
