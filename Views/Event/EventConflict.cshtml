@model DashBoardWebApp.Models.Etkinlik

<h2>Etkinlik Çakışması</h2>

<div class="alert alert-warning">
    Bu etkinlik, aşağıdaki etkinliklerle çakışıyor:
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Tarih</th>
            <th>Saat</th>
            <th>Konum</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var etkinlik in ViewBag.ConflictingEvents as List<DashBoardWebApp.Models.Etkinlik>)
        {
            <tr>
                <td>@etkinlik.EventName</td>
                <td>@etkinlik.Date.ToString("yyyy-MM-dd")</td>
                <td>@etkinlik.Time.ToString(@"hh\:mm")</td>
                <td>@etkinlik.Location</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <h4>Alternatif Zaman Dilimleri</h4>
    <p>Bu etkinlik için farklı bir zaman öneriniz:</p>
    <form method="post" asp-action="CreateEventWithAlternatives">
        <input type="hidden" name="ID" value="@Model.ID" />
        <div class="form-group">
            <label for="Time">Saat</label>
            <input type="time" class="form-control" id="Time" name="Time" required />
        </div>
        <button type="submit" class="btn btn-primary mt-3">Önerilen Saatte Kaydet</button>
    </form>
</div>
